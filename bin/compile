#!/bin/sh

rm -rf dist/*
mkdir dist
cp index.html dist/index.html
cp -R assets dist/assets
mkdir -p dist/bower_components/angular-chart.js/dist
cp bower_components/angular-chart.js/dist/angular-chart.css  dist/bower_components/angular-chart.js/dist/angular-chart.css
cp bower_components/angular-chart.js/dist/angular-chart.css.map  dist/bower_components/angular-chart.js/dist/angular-chart.css.map
mkdir -p dist/bower_components/bootstrap/dist/css
cp bower_components/bootstrap/dist/css/bootstrap.min.css dist/bower_components/bootstrap/dist/css/bootstrap.min.css 
cp -R bower_components/bootstrap/dist/fonts dist/bower_components/bootstrap/dist/fonts
grunt --force
